<div class="grid grid-cols-1 w-fit mx-auto">
  <h1 class="font-bold text-xl mb-4">Forgot your password?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
    </div>

    <div class="actions">
      <%= f.submit "Send Password Reset Instructions", class: "kbutton w-full mt-4" %>
    </div>
  <% end %>

  <div class="flex justify-between mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>