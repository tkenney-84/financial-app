<div class="grid grid-cols-1 w-fit mx-auto">
  <h1 class="font-bold text-xl mb-4">Sign Up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full" %>
      <em><%= @minimum_password_length %> character minimum</em><br />
      <em><%= @maximum_password_length %> character maximum</em><br />
      <em><%= User::PASSWORD_REQUIREMENTS[:minimum_capital_letters] %> lower case letter<% if User::PASSWORD_REQUIREMENTS[:minimum_capital_letters] > 1 %>s<% end %></em><br />
      <em><%= User::PASSWORD_REQUIREMENTS[:minimum_lower_case_letters] %> upper case letter<% if User::PASSWORD_REQUIREMENTS[:minimum_lower_case_letters] > 1 %>s<% end %></em><br />
      <em><%= User::PASSWORD_REQUIREMENTS[:minimum_numbers] %> number<% if User::PASSWORD_REQUIREMENTS[:minimum_numbers] > 1 %>s<% end %></em><br />
      <em><%= User::PASSWORD_REQUIREMENTS[:minimum_special_characters] %> special character<% if User::PASSWORD_REQUIREMENTS[:minimum_special_characters] > 1 %>s<% end %></em><br />
      <em>Valid special characters: <%= User::PASSWORD_REQUIREMENTS[:valid_special_characters] %></em>
    </div>

    <div class="field mt-2">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up", class: "kbutton w-full mt-4" %>
    </div>
  <% end %>

  <div class="flex justify-between mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>